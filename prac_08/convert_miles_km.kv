BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_number
            size_hint_x: 0.75
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1.0)

            Button:
                text: 'Down'
                on_press: app.handle_increment(-1.0)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert()
    Label:
        id: output_label
        color: (0, 1, 1, 1)

